// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  addresses Addresses[]

  @@map("users")
}

model Categories {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  products Products []

  @@map("categories")
}

model Products {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  imageUrl    String
  categoryId  Int
  category    Categories @relation(fields: [categoryId], references: [id])
  price       Int

  @@map("products")
}

model Addresses {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        Users     @relation(fields: [userId], references: [id])
  street      String
  houseNumber Int
  districtId  Int
  district    Districts @relation(fields: [districtId], references: [id])

  @@map("addresses")
}

model States {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  cities Cities[]

  @@map("states")
}

model Cities {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  stateId   Int
  state     States      @relation(fields: [stateId], references: [id])
  districts Districts[]

  @@map("cities")
}

model Districts {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  cityId    Int
  city      Cities      @relation(fields: [cityId], references: [id])
  addresses Addresses[]
  shipping  Shipping?

  @@map("districts")
}

model Shipping {
  id         Int       @id @default(autoincrement())
  districtId Int       @unique
  district   Districts @relation(fields: [districtId], references: [id])
  price      Int

  @@map("shipping")
}
